<div class="row mb-4">
    <div class="col">
        <h1>Recipes</h1>
    </div>
    <div class="col text-end">
        <a href="/recipes/new" class="btn btn-primary">Add New Recipe</a>
    </div>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
    <% recipes.forEach(recipe => { %>
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title"><%= recipe.dishName %></h5>
                    <p class="card-text">
                        <strong>Cooking Time:</strong> <%= recipe.cookingTime %> minutes<br>
                        <strong>Difficulty:</strong> <%= recipe.difficulty %><br>
                        <strong>Author:</strong> <%= recipe.author.username %>
                    </p>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a href="/recipes/<%= recipe._id %>" class="btn btn-info btn-sm">View Details</a>
                        <% if(currentUser && recipe.author._id.equals(currentUser._id)) { %>
                            <div>
                                <a href="/recipes/<%= recipe._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                                <form action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this recipe?')">Delete</button>
                                </form>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    <% }); %>
</div> 